{
  "name": "backend",
  "version": "1.0.0",
  "description": "Modern Office System Backend API",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "migration:transform": "tsx src/migration/transformData.ts",
    "migration:import": "tsx src/migration/importToSupabase.ts",
    "migration:validate": "tsx src/migration/validateMigration.ts",
    "migration:user-migrate": "tsx src/migration/userAccountMigration.ts migrate",
    "migration:user-validate": "tsx src/migration/userAccountMigration.ts validate",
    "migration:user-check": "tsx src/migration/userAccountMigration.ts check-existing",
    "migration:user-reset-passwords": "tsx src/migration/userAccountMigration.ts reset-passwords"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.12",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "@types/nodemailer": "^7.0.5",
    "@vitest/ui": "^4.0.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}